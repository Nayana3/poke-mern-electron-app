{
  "name": "pokemern-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "cross-env NODE_ENV=production electron-builder --win"
  },
  "dependencies": {
    "electron": "^13.6.9"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourdomain.pokemern",
    "productName": "PokeMERN",
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
