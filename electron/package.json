{
  "name": "pokemern-electron",
  "version": "1.0.0",
  "description": "PokeMERN desktop app",
  "author": "Nayana",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "dist": "cross-env NODE_ENV=production electron-builder --win"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourdomain.pokemern",
    "productName": "PokeMERN",
    "files": ["**/*"],
    "win": {
      "target": ["nsis", "portable"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
